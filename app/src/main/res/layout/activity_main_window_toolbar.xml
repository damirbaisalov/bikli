<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_bikli_orange"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_activity_main_window_toolbar_back_button"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:padding="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_window_toolbar_back_button"
            />

        <TextView
            android:textSize="19sp"
            android:textColor="@color/primary_bikli_orange"
            android:text="@string/activity_main_window_bikli_food_text"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_fragment_toolbar_pavlodar_text"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_gravity="end"
        android:layout_marginHorizontal="16dp"
        />


</androidx.appcompat.widget.Toolbar>