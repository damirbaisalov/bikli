<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:background="@color/bikli_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <include
            android:id="@+id/activity_registration_toolbar"
            layout="@layout/activity_registration_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:id="@+id/activity_registration_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_below="@+id/activity_registration_toolbar"
            android:layout_marginTop = "16dp"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/activity_registration_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_name_text_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_name_edit_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:defaultFocusHighlightEnabled="false"
                android:focusedByDefault="false"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />

            <TextView
                android:id="@+id/activity_registration_telephone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_phone_text_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_telephone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_phone_edit_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />

            <TextView
                android:id="@+id/activity_registration_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_address_text_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_address_edit_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />

            <TextView
                android:id="@+id/activity_registration_home_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_home"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_home_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_home"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/activity_registration_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/activity_registration_home_switch_compat"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:switchPadding="30dp"
                android:theme="@style/MySwitch"
                />

            <TextView
                android:id="@+id/activity_registration_flat_num_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_flat_text_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_flat_num_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_flat_edit_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />

            <TextView
                android:id="@+id/activity_registration_floor_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_registration_floor_text_view"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="4dp"
                />

            <EditText
                android:id="@+id/activity_registration_flooredit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/activity_registration_floor_edit_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:defaultFocusHighlightEnabled="false"
                android:focusedByDefault="false"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:backgroundTint="@color/bikli_status_bar"
                android:textCursorDrawable="@color/bikli_status_bar"
                />


        </LinearLayout>

        <Button
            android:id="@+id/activity_registration_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_registration_reg_button"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingHorizontal="50dp"
            android:textAlignment="center"
            android:enabled="true"
            android:background="@drawable/bg_activity_registration_reg_button"
            android:layout_below="@id/activity_registration_form_layout"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            />

        <Button
            android:id="@+id/activity_registration_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_registration_next_button"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:paddingHorizontal="50dp"
            android:background="@drawable/bg_activity_registration_reg_button"
            android:layout_below="@id/activity_registration_register_button"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            />

    </RelativeLayout>
</ScrollView>