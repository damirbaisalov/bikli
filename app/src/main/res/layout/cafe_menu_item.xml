<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_fragment_cafe_info_category_text_view"
    android:elevation="4dp"
    android:padding="8dp"
    android:id="@+id/menu_item_layout">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:id="@+id/text_name_cena_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_image"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/menu_name_eda"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Сырный BRO"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/menu_cena_eda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: 1400 Т"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toBottomOf="@+id/menu_name_eda"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/menu_to_cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_cafe_menu_to_cart_button"
            android:fontFamily="@font/roboto_regular"
            android:text="В корзину"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/menu_cena_eda"
            app:layout_constraintStart_toStartOf="@+id/menu_cena_eda"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:padding="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_name_cena_button_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>